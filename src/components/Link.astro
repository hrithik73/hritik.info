---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  class?: string;
}

const { href, external, underline = true, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  target={ external ? "_blank" : "_self" }
  class={cn("inline-block decoration-black/10 dark:decoration-white/20 hover:decoration-black/25 hover:dark:decoration-white/40 text-current hover:text-black hover:dark:text-white transition-colors duration-200 ease-in-out", underline && "underline underline-offset-2", className)}
  {...rest}>
  <slot/>
</a>
